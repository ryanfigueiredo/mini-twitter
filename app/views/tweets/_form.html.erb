<%= simple_form_for(tweet) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :tweet, label: "Tweet about it", input_html: { class: "textarea"}, maxlength: 140, wrapper: false, label_html: { class: "label"}, placeholder: "Compose a new tweet..." %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-info" %>
  <%= link_to 'Cancel', tweets_path, class: "button is-dark" if render_cancel_button %>
<% end %>
