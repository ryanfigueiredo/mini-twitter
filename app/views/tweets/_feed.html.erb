<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is64x64">
          <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>

      <div class="media-content">
        <%= render "form", tweet: tweet, render_cancel_button: false %>
      </div>
    </article>
  <% end %>

  <% tweets.each do |tweet|%>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.name) %>
          </figure>
        </div>

        <div class="media-content">
          <div class="content">
            <strong><%= tweet.user.name %></strong><br />
            <small><%= tweet.user.username %></small><br />
            <p><%= tweet.tweet %></p>
          </div>

          <% if user_signed_in? %>
            <%#= render 'actions', tweet: tweet %>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>